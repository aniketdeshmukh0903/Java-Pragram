package com.sanket;

public class Anii {

	public static void main(String[] args) 
	{
			for(int i=1;i<=4;i++)
			{
				for(int j=1;j<=i;j++)
				{
					System.out.print("*");
				}
				System.out.println();
			}
				for(int i=1;i<=4;i++)
				{
					for(int j=3;j>=I;j--)
					{
						System.out.print("*");
					}
					System.out.println();
				}
}
}